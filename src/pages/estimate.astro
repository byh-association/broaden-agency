---
import LandingLayout from "../layouts/landing-layout.astro";
import Container from "../component/container.astro";
import CalculatorForm from "../component/calculator";

const DESCRIPTION =
  "The project calculator helps you estimate your project's approximate price without contacting us. Notice, if you have selected any kind of application (web, mobile) - we cannot define the final price on the calculator step.";
const TAGS = ["agency", "service", "landing"];
const TITLE = "Estimate your project";
---

<LandingLayout withFooter description={DESCRIPTION} tags={TAGS} title={TITLE}>
  <Container>
    <CalculatorForm client:visible />
  </Container>
</LandingLayout>
