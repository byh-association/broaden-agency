---
import LandingLayout from "../layouts/landing-layout.astro";
import Container from "../component/container.astro";
import CalculatorForm from "../component/calculator";
import { TAGS as BASETAGS } from "./index.astro";

const DESCRIPTION =
  "UGet a quick and accurate estimate for your software project with Broadency's easy-to-use price calculator. Contact us today for more information.";
const TAGS = [
  ...BASETAGS,
  "estimate price",
  "calculator",
  "easy-to-use",
  "personalized",
  "contact",
];
const TITLE = "Broadency | Estimate Price Calculator";
---

<LandingLayout withFooter description={DESCRIPTION} tags={TAGS} title={TITLE}>
  <Container>
    <CalculatorForm client:load />
  </Container>
</LandingLayout>
