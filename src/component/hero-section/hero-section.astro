---
import ArrowRight from "astro-heroicons/outline/ArrowRight.astro";

import RotatingText from "./rotating-text";
---

<section class="relative flex w-full items-center justify-between">
  {/* Left text content */}
  <div class="flex max-w-[560px] flex-col space-y-11">
    <div class="flex flex-col">
      <RotatingText
        tickDuration={1500}
        words={["Build", "Release", "Maintain", "Publish"]}
      />
      <h1 class="text-6xl font-bold text-slate-700 md:text-8xl">
        your dream app with us
      </h1>
    </div>
    <p class="text-2xl text-slate-700">
      Our experience has helped our clients launch new companies in the digital
      arena throughout the years.
    </p>
    <div class="flex gap-2">
      <a class="btn bg-blue-500 text-neutral-50" href="/calculate">
        Project estimation
      </a>
      <a href="/portfolio" class="btn bg-transparent text-blue-500">
        Our projects
        <ArrowRight class="h-4 w-4 text-gray-900" />
      </a>
    </div>
  </div>
  {/* Hero section illustration */}
  <div class="relative hidden h-[388px] w-[514px] md:block">
    <img
      src="/landing/hero-illustration.svg"
      sizes="(max-width: 640px) 0px"
      alt="Building modern application illustration"
    />
  </div>

  {/* Glow effects */}
  <div
    class="glow-str absolute top-[180px] left-[-169px] hidden h-64 w-64 rounded-full bg-blue-500 md:block"
  >
  </div>
  <div
    class="glow-str absolute top-[-49px] left-[295px] hidden h-64 w-64 rounded-full bg-indigo-900 md:block"
  >
  </div>
  <div
    class="glow-str absolute top-[112px] right-[154px] h-64 w-64 rounded-full bg-gray-900"
  >
  </div>
</section>
