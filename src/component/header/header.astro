---
import ArrowRight from "astro-heroicons/outline/ArrowRight.astro";
import Calculator from "astro-heroicons/outline/Calculator.astro";
import Menu from "astro-heroicons/solid/Bars3.astro";
import Container from "../container.astro";
---

<header class="bg-gray-900">
  <Container>
    <div class="flex w-full items-center justify-between py-3">
      <span class="flex h-12 items-center text-base text-neutral-50">
        Broaden</span
      >

      <Menu class="flex fill-neutral-50 h-7 w-7 cursor-pointer sm:hidden" />

      <div class="hidden items-center space-x-4 sm:flex">
        <nav class="space-x-4">
          <button class="font-medium text-neutral-50">Services</button>
          <button class="font-medium text-neutral-50">Projects</button>
          <a href="/contacts" class="font-medium text-neutral-50"> Contacts</a>
        </nav>

        <span class="h-8 w-[1px] bg-zinc-200"></span>
        <div class="flex space-x-2">
          <a class="icon-btn border border-neutral-50" href="/calculate">
            <Calculator class="h-6 w-6 text-neutral-50" />
          </a>
          <a class="btn bg-neutral-50 rounded text-gray-900" href="/contact">
            Contact us
          </a>
        </div>
      </div>
    </div>
  </Container>
</header>
