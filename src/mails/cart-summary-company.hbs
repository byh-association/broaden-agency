<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Noto Sans font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <style>
      * { box-sizing: border-box; margin: 0; padding: 0; } p, h1, h2, h3, h4,
      h5, h6, span, a { font-family: "Noto Sans", "Open Sans", "Roboto",
      Verdana, sans-serif; } .main-table { padding: 48px 24px; background-color:
      #fafafa; width: 600px; } .main-row { width: 100%; } header {
      margin-bottom: 24px; width: 124px; } .header-logo { width: 124px; }
      .main-title { font-size: 24px; line-height: 32px; font-weight: 700;
      margin-bottom: 24px; color: #334155; } .customer-info-title { color:
      #334155; font-size: 16px; line-height: 24px; margin-bottom: 24px; }
      .customer-info-person { color: #334155; font-weight: 700; font-size: 16px;
      line-height: 24px; margin-bottom: 8px; } .customer-info-person > span {
      color: #94a3b8; font-weight: 400; } .customer-info-budget { font-size:
      16px; line-height: 24px; margin-bottom: 8px; color: #1d4ed8; font-weight:
      700; } .customer-info-description { font-size: 16px; line-height: 24px;
      margin-bottom: 24px; color: #334155; } .cart-wrapper { background-color:
      #fafafa; box-shadow: 0px 4px 30px rgba(17, 24, 39, 0.1); border-radius:
      6px; width: 100%; padding: 12px; margin: 0 auto 24px; }
      .cart-items-wrapper { width: 100%; margin-bottom: 12px; }
      .cart-item-wrapper { width: 100%; padding: 12px; display: inline-block; }
      .cart-item-left { display: inline-block; width: 69%; } .cart-item-right {
      display: inline-block; width: 29%; text-align: right; transform:
      translateY(-8px); } .cart-item-title { font-size: 16px; line-height: 24px;
      color: #334155; } .cart-item-description { font-size: 12px; line-height:
      16px; color: #94a3b8; } .cart-item-price-prefix { font-size: 12px;
      line-height: 16px; color: #94a3b8; display: inline-block; }
      .cart-item-price { font-size: 16px; line-height: 24px; color: #1d4ed8;
      font-weight: 500; display: inline-block; } .cart-total { width: 100%;
      text-align: right; color: #334155; font-size: 12px; line-height: 16px; }
      .cart-total > span { color: #1d4ed8; font-weight: 700; font-size: 24px;
      line-height: 32px; } .contact-wrapper { margin-bottom: 24px; width: 100%;
      margin: 0 auto 24px; } .contact-description { width: 100%; font-size:
      12px; line-height: 16px; color: #94a3b8; margin-bottom: 12px; }
      .contact-email { font-size: 12px; line-height: 16px; font-weight: 700;
      color: #1d4ed8; width: 100%; } .footer-title { font-size: 12px;
      line-height: 16px; margin-bottom: 12px; color: #334155; }
      .footer-social-items { margin-bottom: 16px; } .footer-social-items > a {
      text-decoration: none; } .footer-social-items > a + a { margin-left: 12px;
      } .footer-logo { width: 96px; } .footer-copyright { font-size: 12px;
      line-height: 16px; color: #334155; margin-bottom: 16px; } .footer-links {
      margin-bottom: 16px; } .footer-link { font-size: 12px; line-height: 16px;
      font-weight: 700; text-decoration: none; color: #334155; } .footer-link +
      .footer-link { margin-left: 24px; }
    </style>
  </head>
  <body>
    <table class="main-table">
      <!-- Header Logo -->
      <tr class="main-row">
        <td>
          <header>
            <img
              src="../../../public/logos/light.png"
              alt="Broadency logo"
              class="header-logo"
            />
          </header>
        </td>
      </tr>

      <!-- Title -->
      <tr class="main-row">
        <td>
          <h1 class="main-title">
            Congratulation!
            <br />
            You have new order
          </h1>
        </td>
      </tr>

      <!-- Customer information -->
      <tr>
        <td>
          <p class="customer-info-title">Customer information:</p>
        </td>
      </tr>
      <tr>
        <td>
          <div>
            <p class="customer-info-person">
              {{contacts.firstName}}
              {{contacts.lastName}}
              <span>({{contacts.email}})</span>
            </p>
            <p class="customer-info-budget">${{contacts.budget}}</p>
            <p class="customer-info-description">
              {{contacts.body}}
            </p>
          </div>
        </td>
      </tr>

      <!-- Cart table -->
      <tr>
        <td>
          <div class="cart-wrapper">
            <div class="cart-items-wrapper">
              {{#each items}}
                <!-- item -->
                <div class="cart-item-wrapper">
                  <!-- item's left part -->
                  <div class="cart-item-left">
                    <p class="cart-item-title">{{this.title}}</p>
                    <p class="cart-item-description">
                      {{this.description}}
                    </p>
                  </div>
                  <!-- item's right part -->
                  <div class="cart-item-right">
                    <span
                      class="cart-item-price-prefix"
                    >{{this.costPrefix}}</span>
                    <span class="cart-item-price">${{this.cost}}</span>
                  </div>
                </div>
              {{/each}}
            </div>
            <!-- Cart total -->
            <p class="cart-total">Estimated total is
              {{totalCartPrice.prefix}}
              <span>${{totalCartPrice.number}}</span></p>
          </div>
        </td>
      </tr>

      <!-- Contact us block -->
      <tr>
        <td>
          <div class="contact-wrapper">
            <p class="contact-description">
              If you have any questions or concerns, please do not hesitate to
              contact us. We are more than happy to assist you and provide any
              information you may need. Please feel free to ask us anything, and
              we will do our best to help.
            </p>
            <p class="contact-email">info@broadency.com</p>
          </div>
        </td>
      </tr>

      <!-- Footer -->
      <tr>
        <td>
          <footer>
            <p class="footer-title">Get social. Follow us on:</p>
            <!-- Social profile links -->
            <div class="footer-social-items">
              <a href="https://facebook.com" target="_blank">
                <img
                  src="https://www.broadency.com/icons/default-facebook.png"
                  alt="Facebook"
                />
              </a>
              <a href="https://instagram.com" target="_blank">
                <img
                  src="https://www.broadency.com/icons/default-instagram.png"
                  alt="Instagram"
                />
              </a>
              <a href="https://linkedin.com" target="_blank">
                <img
                  src="https://www.broadency.com/icons/default-linkedin.png"
                  alt="LinkedIn"
                />
              </a>
              <a href="https://twitter.com" target="_blank">
                <img
                  src="https://www.broadency.com/icons/default-twitter.png"
                  alt="Twitter"
                />
              </a>
            </div>
            <p class="footer-copyright">
              Copyright Â©
              {{year}}
              Broaden Association. All rights reserved.
            </p>
            <div class="footer-links">
              <a class="footer-link" href="https://broadency.com/#faq">FAQ</a>
              <a
                class="footer-link"
                href="https://broadency.com/privacy-policy"
              >Privacy Policy</a>
              <a
                class="footer-link"
                href="https://broadency.com/terms-of-use"
              >Terms of Use</a>
            </div>
            <img
              src="../../../public/logos/light.png"
              alt="Broadency logo"
              class="footer-logo"
            />
          </footer>
        </td>
      </tr>
    </table>
  </body>
</html>